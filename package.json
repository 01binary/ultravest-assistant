{
  "name": "ultravest-assistant",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "lint": "eslint src",
    "test": "jest --coverage",
    "test:watch": "yarn test -- --watch",
    "test:snapshot": "yarn test -- --updateSnapshot",
    "start": "if-env NODE_ENV=production && npm run -s serve || npm run -s dev",
    "build": "yarn lint && preact build --config ./src/build/preact.config.js",
    "serve": "preact build --config ./src/build/preact.config.js && preact serve",
    "dev": "preact watch"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "eslintConfig": {
    "extends": "eslint-config-synacor",
    "env": {
      "jest": true
    }
  },
  "jest": {
    "testRegex": "/test/.*tests\\.js$",
    "moduleFileExtensions": [
      "js",
      "json",
      "scss"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "moduleNameMapper": {
      "^react$": "preact-compat",
      "^react-dom$": "preact-compat",
      "/style$": "identity-obj-proxy"
    },
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coverageDirectory": "./build/coverage",
    "snapshotSerializers": [
      "preact-render-spy/snapshot"
    ]
  },
  "babel": {
    "presets": [
      "env"
    ],
    "plugins": [
      [
        "transform-react-jsx",
        {
          "pragma": "h"
        }
      ]
    ]
  },
  "devDependencies": {
    "babel-plugin-module-resolver": "^2.7.1",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "babel-register": "^6.26.0",
    "eslint": "^4.6.1",
    "eslint-config-synacor": "^1.1.1",
    "identity-obj-proxy": "^3.0.0",
    "if-env": "^1.0.0",
    "jest": "^21.0.2",
    "node-sass": "^4.5.3",
    "preact-cli": "^1.4.1",
    "preact-render-spy": "^1.0.0-rc.8",
    "ramda": "^0.24.1",
    "sass-lint": "^1.11.1",
    "sass-loader": "^6.0.6",
    "ts-loader": "^2.3.7",
    "typescript": "next"
  },
  "dependencies": {
    "preact": "^8.2.5",
    "preact-compat": "^3.17.0",
    "recompose": "^0.25.0"
  }
}
