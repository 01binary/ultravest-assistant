{
  "name": "ultravest-assistant",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "lint": "eslint src",
    "test": "jest --coverage",
    "test:watch": "yarn test -- --watch",
    "start": "if-env NODE_ENV=production && npm run -s serve || npm run -s dev",
    "build": "lint && preact build",
    "serve": "preact build && preact serve",
    "dev": "preact watch"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "eslintConfig": {
    "extends": "eslint-config-synacor"
  },
  "jest": {
    "testRegex": "/test/.*tests\\.js$",
    "setupFiles": [
      "./test/setup.js"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "scss"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "moduleNameMapper": {
      "^react$": "preact-compat",
      "^react-dom$": "preact-compat",
      "/style$": "identity-obj-proxy"
    },
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coverageDirectory": "./build/coverage",
    "snapshotSerializers": [ "preact-render-spy/snapshot" ]
  },
  "babel": {
    "presets": [
      "env"
    ],
    "plugins": [
      [
        "transform-react-jsx",
        {
          "pragma": "h"
        }
      ],
      [
        "module-resolver",
        {
          "root": [
            "."
          ],
          "alias": {
            "react": "preact-compat"
          }
        }
      ]
    ]
  },
  "devDependencies": {
    "babel-plugin-module-resolver": "^2.7.1",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "babel-register": "^6.26.0",
    "eslint": "^4.6.1",
    "eslint-config-synacor": "^1.1.1",
    "identity-obj-proxy": "^3.0.0",
    "if-env": "^1.0.0",
    "jest": "^21.0.2",
    "node-sass": "^4.5.3",
    "preact-cli": "^1.4.1",
    "preact-render-spy": "^1.0.0-rc.8",
    "sass-lint": "^1.11.1",
    "sass-loader": "^6.0.6",
    "undom": "^0.3.3"
  },
  "dependencies": {
    "preact": "^8.2.5",
    "preact-compat": "^3.17.0",
    "react": "npm:preact-compat",
    "recompose": "^0.25.0"
  }
}
